<%- include('_head') %>

<body>
  
  <main class="container text-center justify-content-center">
    <%- include('_usuario') %> 

    <%- include("_nav") %>

    <h1> Mi Carrito de compras</h1>

    <% if (carritoExists) { %>
      <a href="/carrito/comprar"><button>Finalizar Compra</button></a>

      <div class="table-responsive px-4">
        <table class="table table-dark">
          <tr style="color: yellow;"> <th>Titulo</th> <th>Precio</th> <th>Portada</th> <th>X</th></tr>
          <% for (const prod of miCarrito) {%>
          <tr>
            <td><%=prod.titulo%></td>
            <td><%=prod.precio%></td>
            <td><%=prod.thumbnail%></td>
            <td><a href="/carrito/delProd/<%-prod._id%>"><button>x</button></a></td>
          </tr>
          <%};%>
        </table>
      </div>
      <% } else { %> 
        <h3>No se encontraron productos en tu carrito. </h3>
      <% } %> 
    
  </main>

